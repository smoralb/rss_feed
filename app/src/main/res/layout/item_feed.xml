<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_thubnail"
            android:layout_width="@dimen/dimen_s"
            android:layout_height="@dimen/dimen_s"
            android:layout_margin="@dimen/spacing_xs"
            tools:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_xs"
            android:paddingTop="@dimen/spacing_xs"
            android:paddingEnd="@dimen/spacing_xs">

            <TextView
                android:id="@+id/tv_title"
                style="@style/CustomTextBlackMBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_s"
                tools:text="Title" />

            <TextView
                android:id="@+id/tv_description"
                style="@style/CustomTextBlackS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/spacing_s"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Description" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>